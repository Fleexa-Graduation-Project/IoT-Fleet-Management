{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Telemetry Schema",
  "description": "The standard wrapper for all upstream IoT messages",
  "type": "object",
  "required": [
    "device_id",
    "timestamp",
    "type",
    "payload"
  ],

  "properties": {
    "device_id": {
      "type": "string",
      "minLength": 3,
      "description": "Unique ID like temp-sensor-01"
    },

    "timestamp": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix timestamp in seconds"
    },

    "type": {
      "type": "string",
      "enum": ["sensor", "actuator"],
      "description": "Either 'sensor' or 'actuator'"
    },

    "payload": {
      "type": "object",
      "minProperties": 1,
      "description": "The actual sensor data"
    }
  },

  "additionalProperties": false
}