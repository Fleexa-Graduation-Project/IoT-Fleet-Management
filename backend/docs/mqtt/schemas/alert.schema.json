{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Alert Schema",
  "description": "The standard wrapper for critical safety events",
  "type": "object",
  "required": [
    "device_id",
    "timestamp",
    "type",
    "payload"
  ],

  "properties": {
    "device_id": {
      "type": "string",
      "minLength": 3,
      "description": "Unique ID like gas-sensor-01"
    },

    "timestamp": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix timestamp in seconds"
    },

    "type": {
      "type": "string",
      "enum": ["sensor", "actuator"],
      "description": "Either 'sensor' or 'actuator'"
    },

    "payload": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": { "type": "string", "minLength": 1 },
        "severity": { "type": "string", "enum": ["LOW", "MEDIUM", "CRITICAL"] }
      },
      "additionalProperties": true
    }
  },

  "additionalProperties": false
}